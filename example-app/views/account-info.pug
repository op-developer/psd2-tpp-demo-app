extends layout

block content
  .opux-loading

  .page-header
    h2 Account information for #{account[2].value}
    p
      a(href=`${transactionsLink}` class='link' onclick='javascript:document.body.classList.add(\'in-progress\')') ‚áê Back to transactions
    .bordered-list-container
        each val, index in account
          .opux-form-group.container-data-row.data-row
            .opux-g-col-xs-4.opux-g-col-s-4.col-xxs
              span(class='label') #{val.name}
            div(class='opux-g-col-xs-8 opux-g-col-s-8 col-xxs' style='overflow: hidden')
              span #{val.value}
