doctype html
html(lang='')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Redirecting...
    script.
        // This page redirects control back to the TPP with parameters in the URL
        // See https://openid.net/specs/openid-connect-core-1_0.html#code-id_tokenExample
        var originalParameters = location.hash.substring(1);
        var parameters = originalParameters.length > 0 ? originalParameters : 'error=access_denied';
        var targetUrl = 'https://' + window.location.host + window.location.pathname + '?' + parameters;
        window.location = targetUrl;
